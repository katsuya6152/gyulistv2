{
  "name": "@gyulistv2/api",
  "version": "1.0.0",
  "description": "Gyulist v2 API Server",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@hono/swagger-ui": "^0.3.0",
    "@hono/zod-validator": "^0.2.0",
    "@prisma/client": "^6.16.2",
    "@types/pg": "^8.15.5",
    "cors": "^2.8.5",
    "hono": "^4.6.0",
    "pg": "^8.16.3",
    "prisma": "^6.16.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
